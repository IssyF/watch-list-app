<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(https://images.unsplash.com/photo-1512149177596-f817c7ef5d4c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1900&q=80);">
  <div class="banner-header">
    <h1>Movies Watchlists</h1>
    <p>Add lists of movies you want to watch</p>
  </div>
  <div>
    <%= link_to '+ New List', new_list_path, class: "btn btn-dark banner-button" %>
  </div>
</div>

<div class="container">

  <div class="row">

    <% @lists.each do |list| %>
      <div col-9 col-md-3 col-lg-4>

        <% if list.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
            <%= link_to list.name.capitalize, list_path(list) %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1505775561242-727b7fba20f0?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTN8fGZpbG18ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=900&q=60)">
            <%= link_to list.name.capitalize, list_path(list) %>
          </div>
        <% end %>

      </div>
    <% end %>

  </div>

</div>
