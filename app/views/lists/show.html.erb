<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1512149177596-f817c7ef5d4c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1900&q=80)" >
  <h1><%= @list.name.capitalize %> List</h1>
</div>

<% @list.bookmarks.each do |bookmark| %>
  <%= image_tag bookmark.movie.poster_url, alt: "movie poster", width: 200 %>
  <h2><%= bookmark.movie.title %></h2>
  <p><%= bookmark.movie.rating %></p>
  <p><%= bookmark.movie.overview %></p>
  <p><%= bookmark.comment.capitalize %></p>
  <p>
    <%= link_to 'Delete Bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to delete this bookmark?"} %>
  </p>
<% end %>

<div>
  <%= link_to 'Create a Bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>

<div>
  <%= link_to 'Back to All Lists', lists_path %>
</div>
