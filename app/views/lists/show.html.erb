<% if @list.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url('<%= cl_image_path @list.photo.key %>');">
<% else %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(https://images.unsplash.com/photo-1505775561242-727b7fba20f0?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTN8fGZpbG18ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=900&q=60);">
<% end %>
    <%= link_to lists_path class:"back-button" do %>
        <i class="fas fa-arrow-circle-left"></i>
    <% end %>
    <h1><%= @list.name.capitalize %> List</h1>
  <div>
    <%= link_to '+ Movie Bookmark To List', new_list_bookmark_path(@list), class: "btn btn-dark banner-button" %>
  </div>
  </div>

<div class="container">

  <div class="bookmarks">

    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-bookmark">
          <%= image_tag bookmark.movie.poster_url, alt: "movie poster", width: 200 %>

          <div class="card-bookmark-info">
            <h2>
              <%= bookmark.movie.title %>
              <%= link_to bookmark_path(bookmark), method: :delete, class:"delete-bookmark", data: { confirm: "Are you sure you want to delete this bookmark?"} do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </h2>
            <p>Rating <%= bookmark.movie.rating %></p>
            <p><%= bookmark.movie.overview %></p>

            <p class="bookmark-comment">"<%= bookmark.comment %>"</p>
            </p>
          </div>
      </div>
    <% end %>

  </div>
</div>
